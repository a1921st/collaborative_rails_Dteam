/*================================================
 タブレット・スマートフォン向けデザイン
 ================================================*/
@media screen and (max-width:767px) {
	.display 
		box-sizing: border-box;
		width: 48.98%;
		width: calc((480 / 980) *100%);
		margin-bottom: 10px;
	}
}


@media screen and (max-width:979px) {
	.inner {
		width: 100%;
	}
}

